<div class="home-header">
  {{#if search}}
    <h1>Você está buscando por: <span>{{search}}</span></h1>
    {{#if toughtsQty}}
      <p>Foram encontrados <span>{{toughtsQty}} pensamentos</span></p>
    {{else}}
      <p>Nenhum pensamento foi encontrado para o termo
        <span>{{search}}</span></p>
    {{/if}}
  {{else}}
    <h1>Alguns <span>Pensamentos</span></h1>
  {{/if}}
  <form action="/" method="GET">
    <input type="text" name="search" placeholder="Está buscando por algo?" />
    <input type="submit" class="btn" value="Buscar" />
  </form>
  <div class="order-container">
    <span>ordenar por:</span>
    <form action="/" method="GET">
      <input type="hidden" name="search" value="{{this.search}}" />
      <input type="hidden" name="order" value="new" />
      <button type="submit"><i class="bi bi-arrow-up"></i></button>
    </form>
    <form action="/" method="GET">
      <input type="hidden" name="search" value="{{this.search}}" />
      <input type="hidden" name="order" value="old" />
      <button type="submit"><i class="bi bi-arrow-down"></i></button>
    </form>
    <a href="/">Limpar</a>
  </div>
</div>
<div class="toughts-container">
  {{#each toughts}}
    <figure>
      <blockquote>
        "{{this.title}}"
      </blockquote>
      <div class="under-toughts-container">
        <figCaption>por <span>{{this.User.name}}</span></figCaption>
        <div class="like-container">
          <div class="like-box">
            <span class="likes-number">{{this.like}}</span>
            <form action="/userLikePost" method="POST">
              <button type="submit">
                <input type="hidden" name="toughtId" value="{{this.id}}" />
                <input
                  type="hidden"
                  name="likeStatus"
                  value="{{this.userLike}}"
                />
                <input
                  type="hidden"
                  name="deslikeStatus"
                  value="{{this.userDeslike}}"
                />
                {{#if this.userLike}}
                  <i class="bi bi-hand-thumbs-up-fill selected-like"></i>
                {{else}}
                  <i class="bi bi-hand-thumbs-up"></i>
                {{/if}}
              </button>
            </form>
          </div>
          <div class="like-box">
            <span class="likes-number">{{this.deslike}}</span>
            <form action="/userDeslikePost" method="POST">
              <button type="submit">
                <input type="hidden" name="toughtId" value="{{this.id}}" />
                <input
                  type="hidden"
                  name="likeStatus"
                  value="{{this.userLike}}"
                />
                <input
                  type="hidden"
                  name="deslikeStatus"
                  value="{{this.userDeslike}}"
                />
                {{#if this.userDeslike}}
                  <i class="bi bi-hand-thumbs-down-fill selected-deslike"></i>
                {{else}}
                  <i class="bi bi-hand-thumbs-down"></i>
                {{/if}}
              </button>
            </form>
          </div>
        </div>
      </div>
    </figure>
  {{/each}}
</div>